
    <div class="card">
        <img class="card-img-top" src="{{ asset('uploads/' ~book.image) }}" alt="Harry Potter et la coupe de feu">
        <div class="card-body">
            <h3>{{ book.title }}</h3>
            <div class="book-infos">
                <span class="label label-info"><i class="fa fa-user"></i> {{ book.author.fullname }}</span>
                {% for category in book.category  %}
                    <span class="label label-success"><i class="fa fa-tag"></i>{{ category.name }}</span>
                {% endfor %}

                <span class="label label-success"><i class="fa fa-tag"></i> Fantastique</span>
            </div>
            <p><a href="{{ path('book_show', {'slug' : book.slug}) }}" class="btn btn-primary" role="button"><i class="fa fa-eye"></i> Voir plus</a>
            </p>
        </div>
    </div>
